extends layout/main.pug

block vars
  - const title = 'Текстовка';
  - const pagetype = 'inner';

block content

  section.breadcrumb-nav: .container: .row: .col
    include elements/_el_breadcrumb.pug

  section.main: .container

    .row
      .col
        .h1 1 какой-то заголовок
        .lead Современный портал для торговли недвижимостью

        +title_separator('Headers')
        h1 Lorem ipsum Заголовок 1
        h2 Lorem ipsum Заголовок 2
        h3 Lorem ipsum Заголовок 3
        h4 Lorem ipsum Заголовок 4
        h5 Lorem ipsum Заголовок 5
        h6 Lorem ipsum Заголовок 6

    .row
      .col
        +title_separator('Paragraph')
        p Lorem ipsum, dolor sit amet consectetur adipisicing elit. Fuga sequi modi dignissimos sunt natus? Voluptatibus alias incidunt reprehenderit, veritatis sunt dicta doloremque eveniet ab. Alias explicabo eum, asperiores laboriosam dolorem veniam! Beatae commodi cupiditate quia maiores sequi! Iure, nostrum reiciendis!
